#include <iostream>
#include <termios.h>
#include <fcntl.h>
#include <unistd.h>

using namespace std;

// ÊâìÂºÄ‰∏≤Âè£
int openSerialPort(const char* portName) {
    int serial = open(portName, O_RDWR | O_NOCTTY | O_SYNC);
    if (serial < 0) {
        perror("‚ùå Failed to open serial port");
        return -1;
    }

    struct termios tty;
    if (tcgetattr(serial, &tty) != 0) {
        perror("tcgetattr failed");
        close(serial);
        return -1;
    }

    cfsetospeed(&tty, B9600);
    cfsetispeed(&tty, B9600);
    tty.c_cflag = (tty.c_cflag & ~CSIZE) | CS8;
    tty.c_iflag &= ~IGNBRK;
    tty.c_lflag = 0;
    tty.c_oflag = 0;
    tty.c_cc[VMIN] = 0;
    tty.c_cc[VTIME] = 5;
    tty.c_iflag &= ~(IXON | IXOFF | IXANY);
    tty.c_cflag |= (CLOCAL | CREAD);
    tty.c_cflag &= ~(PARENB | PARODD);
    tty.c_cflag &= ~CSTOPB;
    tty.c_cflag &= ~CRTSCTS;

    if (tcsetattr(serial, TCSANOW, &tty) != 0) {
        perror("tcsetattr failed");
        close(serial);
        return -1;
    }

    return serial;
}

int main() {
    const char* port = "/dev/ttyACM0";  // Ê†πÊçÆÂÆûÈôÖÊÉÖÂÜµ‰øÆÊîπ‰∏∫ ttyUSB0 / ttyACM1 Á≠â
    int serial = openSerialPort(port);
    if (serial < 0) return 1;

    cout << "‚úÖ Connected to Arduino on " << port << endl;
    cout << "üéÆ Control Keys:" << endl;
    cout << "  w = forward" << endl;
    cout << "  s = backward" << endl;
    cout << "  a = turn left" << endl;
    cout << "  d = turn right" << endl;
    cout << "  q = stop" << endl;
    cout << "  o = manual mode" << endl;
    cout << "  p = auto avoid mode" << endl;
    cout << "  x = exit program" << endl;

    while (true) {
        cout << "\nEnter command > ";
        char cmd;
        cin >> cmd;

        if (cmd == 'x') break;

        if (cmd == 'w' || cmd == 's' || cmd == 'a' || cmd == 'd' ||
            cmd == 'o' || cmd == 'p' || cmd == 'q') {
            write(serial, &cmd, 1);
            cout << "‚úÖ Sent command: " << cmd << endl;
        } else {
            cout << "‚ö†Ô∏è Invalid command." << endl;
        }
    }

    close(serial);
    cout << "üîå Serial port closed. Exiting." << endl;
    return 0;
}
